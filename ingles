#!/bin/bash

# Arquivo onde todas as frases serÃ£o armazenadas
ARQUIVO="$HOME/Documentos/Ingles/anotacoes.txt"

# Criar diretÃ³rio se nÃ£o existir
mkdir -p "$(dirname "$ARQUIVO")"
touch "$ARQUIVO"

# Cores
BRANCO="\e[97m"
AZUL="\e[34m"
VERDE="\e[32m"
VERMELHO="\e[31m"
AMARELO="\e[33m"
LARANJA="\e[38;5;214m"  # Cor para a nova opÃ§Ã£o
RESET="\e[0m"

# VariÃ¡vel para o limite de frases por pÃ¡gina
limite=5

# Adicionar frases ao arquivo (evitando duplicatas)
adicionar_frases() {
    echo -e "${AZUL}Digite frases de inglÃªs (inclua a pronÃºncia entre () e a traduÃ§Ã£o entre [])."
    echo -e "Pressione Enter sem digitar nada para sair.${RESET}"

    while true; do
        read -p "Frase: " frase
        [[ -z "$frase" ]] && break  # Sai do loop se a entrada estiver vazia
        
        # Verifica se a frase jÃ¡ existe no arquivo
        if grep -Fxq "$frase" "$ARQUIVO"; then
            echo -e "${VERMELHO}âš ï¸ Frase jÃ¡ cadastrada!${RESET}"
        else
            echo "$frase" >> "$ARQUIVO"
            echo -e "${VERDE}âœ… Frase salva!${RESET}"
        fi
    done
}

# Exibir frases salvas com paginaÃ§Ã£o
exibir_frases() {
    if [[ -s "$ARQUIVO" ]]; then
        mapfile -t frases < "$ARQUIVO"
        total=${#frases[@]}
        pagina=0
        total_paginas=$(( (total + limite - 1) / limite ))

        while true; do
            clear
            inicio=$((pagina * limite))
            fim=$((inicio + limite))
            if [[ $fim -gt $total ]]; then
                fim=$total
            fi

            echo -e "ðŸ“– ${BRANCO}Frases salvas:${RESET}\n"
            for ((i=inicio; i<fim; i++)); do
                linha="${frases[i]}"
                frase=$(echo "$linha" | sed -E 's/\(.*\)//' | sed -E 's/\[.*\]//')
                pronuncia=$(echo "$linha" | grep -oP '\(.*?\)')
                traducao=$(echo "$linha" | grep -oP '\[.*?\]')

                echo -e "${BRANCO}Frase: $frase${RESET}"
                [[ -n "$pronuncia" ]] && echo -e "${AZUL}PronÃºncia: $pronuncia${RESET}"
                [[ -n "$traducao" ]] && echo -e "${VERDE}TraduÃ§Ã£o: $traducao${RESET}"
                echo -e "----------------------------------"
            done

            echo -e "${AZUL}PÃ¡gina $((pagina + 1))/$total_paginas${RESET}"
            echo -e "[N] PrÃ³xima pÃ¡gina | [P] PÃ¡gina anterior | [Q] Sair"
            read -n 1 -s resposta
            case "$resposta" in
                n|N) [[ $pagina -lt $((total_paginas - 1)) ]] && ((pagina++)) ;;
                p|P) [[ $pagina -gt 0 ]] && ((pagina--)) ;;
                q|Q) clear; break ;;
            esac
        done
    else
        echo -e "${VERMELHO}Nenhuma frase adicionada ainda.${RESET}"
    fi
}

# Pesquisar frases por palavra-chave
pesquisar_frases() {
    echo -e "${AZUL}Digite o termo de busca:${RESET}"
    read termo

    mapfile -t resultados < <(grep -i --color=never "$termo" "$ARQUIVO" 2>/dev/null)
    
    if [[ ${#resultados[@]} -eq 0 ]]; then
        echo -e "${VERMELHO}Nenhuma frase encontrada.${RESET}"
    else
        total=${#resultados[@]}
        pagina=0
        total_paginas=$(( (total + limite - 1) / limite ))
        
        while true; do
            clear
            inicio=$((pagina * limite))
            fim=$((inicio + limite))
            if [[ $fim -gt $total ]]; then
                fim=$total
            fi
            
            echo -e "ðŸ”Ž ${BRANCO}Resultados encontrados: $total${RESET}\n"
            for ((i=inicio; i<fim; i++)); do
                linha="${resultados[i]}"
                frase=$(echo "$linha" | sed -E 's/\(.*\)//' | sed -E 's/\[.*\]//')
                pronuncia=$(echo "$linha" | grep -oP '\(.*?\)')
                traducao=$(echo "$linha" | grep -oP '\[.*?\]')

                echo -e "${BRANCO}Frase: $frase${RESET}"
                [[ -n "$pronuncia" ]] && echo -e "${AZUL}PronÃºncia: $pronuncia${RESET}"
                [[ -n "$traducao" ]] && echo -e "${VERDE}TraduÃ§Ã£o: $traducao${RESET}"
                echo -e "----------------------------------"
            done
            
            echo -e "${AZUL}PÃ¡gina $((pagina + 1))/$total_paginas${RESET}"
            echo -e "[N] PrÃ³xima pÃ¡gina | [P] PÃ¡gina anterior | [Q] Sair"
            read -n 1 -s resposta
            case "$resposta" in
                n|N) [[ $pagina -lt $((total_paginas - 1)) ]] && ((pagina++)) ;;
                p|P) [[ $pagina -gt 0 ]] && ((pagina--)) ;;
                q|Q) clear; break ;;
            esac
        done
    fi
}

# Limpar terminal
limpar_terminal() {
    clear
    echo -e "${VERDE}Terminal limpo!${RESET}"
}

# Alterar limite de frases por pÃ¡gina
alterar_limite() {
    echo -e "${LARANJA}Digite o novo limite de frases por pÃ¡gina (nÃºmero positivo):${RESET}"
    read novo_limite
    if [[ "$novo_limite" =~ ^[0-9]+$ ]] && [ "$novo_limite" -gt 0 ]; then
        limite=$novo_limite
        echo -e "${VERDE}Limite de frases por pÃ¡gina alterado para $limite!${RESET}"
    else
        echo -e "${VERMELHO}Valor invÃ¡lido! Por favor, insira um nÃºmero positivo.${RESET}"
    fi
}

# Menu principal
while true; do
    echo -e "\nðŸ“š ${BRANCO}DiÃ¡rio de InglÃªs - AnotaÃ§Ãµes Ilimitadas${RESET}\n"
    echo -e "${AZUL}1) âœï¸  Adicionar frases${RESET}"
    echo -e "${VERDE}2) ðŸ“– Ver todas as frases${RESET}"
    echo -e "${AMARELO}3) ðŸ” Pesquisar frases${RESET}"
    echo -e "${LARANJA}4) âš™ï¸ Alterar limite de frases por pÃ¡gina${RESET}"
    echo -e "${VERMELHO}5) ðŸ§¹ Limpar terminal${RESET}"
    echo -e "${BRANCO}6) âŒ Sair${RESET}"
    read -p "Escolha uma opÃ§Ã£o: " opcao

    case $opcao in
        1) adicionar_frases ;;
        2) exibir_frases ;;
        3) pesquisar_frases ;;
        4) alterar_limite ;;
        5) limpar_terminal ;;
        6) echo -e "${VERMELHO}Saindo...${RESET}"; exit 0 ;;
        *) echo -e "${VERMELHO}OpÃ§Ã£o invÃ¡lida!${RESET}" ;;
    esac

done
